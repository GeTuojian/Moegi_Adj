{{!< default}}

<header>
    <div class="post-blog-title"><a href="{{@blog.url}}"><i class="iconfont icon-back"></i>&nbsp;{{@blog.title}}</a></div>
</header>

<main role="main">
    <header class="post-header">
        <h1 class="post-title">{{primary_author.name}}</h1>
        <section class="post-meta">
            {{#if primary_author.bio}}
                {{primary_author.bio}}
            {{else}}
                作者共有{{pagination.total}}篇文章
            {{/if}}
        </section>
    </header>

    {{> "loop"}}

</main>
